{{ 'template-collection.css' | asset_url | stylesheet_tag }}
{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}


{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }}">

{% comment %} product loop  {% endcomment %}


      {%- for product in collection.products -%}


            <div class="grid">
                
            <div class="grid__item ">


            <div class="product-details">

            <h3> {{ product.title | escape }}</h3>

            <div class="retail-price">
               
            {% render 'price', product: card_product, price_class: 'text-center', show_compare_at_price: true %}

            </div>

            <div class="product-desc">
                  {{ product.description }}
            </div>

            <div class="variants">
                  
  {%- for variant in product.variants -%}
      <div class="variant">
        <h3>Variant: {{ variant.title }}</h3>

        <p><strong>Price:</strong> {{ variant.price | money }}</p>

        {%- if variant.inventory_management == 'shopify' -%}
          <p><strong>Inventory:</strong> {{ variant.inventory_quantity }} in stock</p>
          
          {%- if variant.inventory_quantity <= 5 -%}
            <p style="color: red;">Low stock!</p>
          {%- endif -%}
        {%- else -%}
          <p><strong>Inventory Management:</strong> Not managed by Shopify</p>
        {%- endif -%}

        <p><strong>SKU:</strong> {{ variant.sku }}</p>
        <p><strong>Available for Sale:</strong> {{ variant.available | yesno }}</p>

        {%- if variant.weight > 0 -%}
          <p><strong>Weight:</strong> {{ variant.weight }} {{ variant.weight_unit }}</p>
        {%- endif -%}

        <p><strong>Option Values:</strong> 
          {%- for option in variant.options -%}
            {{ option }}{%- if forloop.last == false %}, {% endif -%}
          {%- endfor -%}
        </p>

      </div> <!-- End of Variant -->
    {%- endfor -%}
            </div>

            </div>


            </div>


                      <div class="grid__item "></div>
            </div>


        {% endfor %}
        {% comment %} product title  {% endcomment %}

</div>

{% schema %}
{
  "name": "Collection Catalog",
  "class": "section",
  "settings": [
    
  
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "info": "t:sections.all.colors.has_cards_info",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.main-collection-product-grid.settings.header__3.content"
    },
   
  
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}

<style>

.breadcrumb_text{
  margin-bottom: 32px;
}

.breadcrumb {
    
     color: var(--text-color-1);
font-size: 16px;
font-style: normal;
font-weight: 500;
line-height: 24px; /* 150% */

 }

  
  .breadcrumbs__list {
    list-style-type: none;
    margin: 0;
    padding: 0;
  }

  .breadcrumbs__item {
    display: inline-block;
   
  }

  .breadcrumb i{ font-size:12px; padding: 0 4px; }

  .breadcrumb a{ 
      color: var(--text-color-2);
 
   
 }

.breadcrumb .icon-arrow-right {
  font-size: 8px;
  position: relative;
  top: -1px; }

.breadcrumb a.ss-icon:hover {
  color: #0d3ff0; }
</style>

{% if section.settings.product_breadcrumb %}


    
<nav class="breadcrumb_text breadcrumb" role="navigation" aria-label="breadcrumbs">
  <ol class="breadcrumbs__list">

    
    <li class="breadcrumbs__item">
      <a class="breadcrumbs__link" href="/">Home</a>

       <i class="fa-solid fa-chevron-right"></i>
    </li> 
<li class="breadcrumbs__item">

  {% assign collection =  product.collections %}

   {% assign collectionSize = collection.size %}
  
    {% for collection in collection %}{{ collection.title | link_to: collection.url }}{% if collectionSize > 1  %}{% unless forloop.last and collectionSize > 1 %}, {% endunless %}{% endif %}{% endfor %} &gt; </li>

     <li class="breadcrumbs__item">
        {{ product.title }}
        </li>

    
    
  </ol>
</nav>

    
{% endif %}

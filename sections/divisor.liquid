{%- style -%}
.section-{{ section.id }}-hr {
    width: 100%;
    height: {{ section.settings.divisor }}px;
}
{% endstyle %}

<hr class="color-{{ section.settings.color_scheme }} isolate gradient section-{{ section.id }}-hr">

{% schema %}
{
    "name": "Divisor",
    "settings": [
        {
            "type": "range",
            "id": "divisor",
            "min": 1,
            "max": 6,
            "step": 1,
            "label": "Divisor stroke width",
            "default": 1
        },
        {
            "type": "color_scheme",
            "id": "color_scheme",
            "label": "Divisor color",
            "default": "scheme-1"
        }
    ],
    "presets": [
        {
            "name": "Divisor"
        }
    ]
}
{% endschema %}

{{ 'collapsible-content.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }


  summary .plus{ display:block}
    summary .minus{ display:none}

  .accordion details[open]>summary .plus{ display:none; }
    .accordion details[open]>summary .minus{ display:block; }

    .icon-accordion{
      font-size:24px;
    }

    .collapsible-content__heading{color:rgba( var(--title-highlighted) )}

    .accordion__title {
  
    font-size: 24px;
  font-family: "Barlow", sans-serif !important;
    font-weight: 500;
    line-height:32px;
}



.accordion{  

    /* background: #FFFDF3; */

border:solid 1px #191C00!important;
border-bottom:0;
    margin-bottom: 8px;
  
  }

    .accordion summary, .accordion__content {
   
    padding: 12px 32px;
    margin:0;
   
/* background: var(--Cream, #FFFDF3); */


}

.accordion summary{   
   align-items: center; border-bottom: 1px solid var(--Dark-Green, #191C00);
    gap: 10px;}
@media screen and (min-width: 750px) {
    .w-40 {
        width: calc(40% - var(--grid-desktop-horizontal-spacing) / 2)!important;
    }
}


{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="collapsible-content collapsible-{{ section.settings.layout }}-layout isolate{% if section.settings.layout == 'section' %} page-width{% elsif section.settings.layout == 'none' %} content-container content-container--full-width{% endif %}">
    <div class="collapsible-content__wrapper section-{{ section.id }}-padding{% if section.settings.layout == 'section' %} content-container color-{{ section.settings.container_color_scheme }} gradient{% endif %}">
      <div class="page-width">
       
        <div class="grid grid--1-col align-items-center grid--2-col-tablet collapsible-content__grid{% if section.settings.desktop_layout == 'image_second' %} collapsible-content__grid--reverse{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
         












            <div class="grid__item collapsible-content__grid-item  w-40">
             
            

              {%- if section.settings.heading != blank -%}
            <h2 class="collapsible-content__heading inline-richtext m-0 mb-8 {{ section.settings.heading_size }}">
              {{ section.settings.heading }}
            </h2>
          {%- else -%}
            <h2 class="visually-hidden">{{ 'accessibility.collapsible_content_title' | t }}</h2>
          {% endif %}

{%- if section.settings.caption != blank -%}
            <p class="text-big mt-0" >
              {{ section.settings.caption | escape }}
            </p>
          {% endif %}









          <div
                class="rich-text__buttons{% if section.settings.button_label != blank and section.settings.button_label_2 != blank %} rich-text__buttons--multiple{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %} m-0 justify-content-start"
                {{ settings.shopify_attributes }}
                {% if settings.animations_reveal_on_scroll %}
                  data-cascade
                  style="--animation-order: {{ forloop.index }};"
                {% endif %}
              >
                {%- if section.settings.button_label != blank -%}
                  <a
                    {% if section.settings.button_link == blank %}
                      role="link" aria-disabled="true"
                    {% else %}
                      href="{{ section.settings.button_link }}"
                    {% endif %}
                    class="button  {% if section.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
                  >
                    {{- section.settings.button_label | escape -}}
                  </a>
                {%- endif -%}
                {%- if section.settings.button_label_2 != blank -%}
                  <a
                    {% if section.settings.button_link_2 == blank %}
                      role="link" aria-disabled="true"
                    {% else %}
                      href="{{ section.settings.button_link_2 }}"
                    {% endif %}
                    class="button{% if section.settings.button_style_secondary_2 %} button--secondary{% else %} button--primary{% endif %}"
                  >
                    {{- section.settings.button_label_2 | escape -}}
                  </a>
                {%- endif -%}
              </div>




            </div>






            






        
          <div class="grid__item">
            {%- for block in section.blocks -%}
              <div
                class="accordion{% if section.settings.layout == 'row' %} content-container  {% endif %} color-{{ section.settings.container_color_scheme }} gradient"
                {{ block.shopify_attributes }}
              >
                <details
                  id="Details-{{ block.id }}-{{ section.id }}"
                  {% if section.settings.open_first_collapsible_row and forloop.first %}
                    open
                  {% endif %}
                >
                  <summary id="Summary-{{ block.id }}-{{ section.id }}">
                    {% render 'icon-accordion', icon: block.settings.icon %}


                    <span class="icon-accordion plus">+</span>
                    <span class="icon-accordion minus">-</span>


                    <h3 class="accordion__title inline-richtext h4">
                      {{ block.settings.heading | default: block.settings.page.title | escape }}
                    </h3>

{% comment %} 
                    {{- 'icon-caret.svg' | inline_asset_content -}}

 {% endcomment %}

                  </summary>
                  <div
                    class="accordion__content rte"
                    id="CollapsibleAccordion-{{ block.id }}-{{ section.id }}"
                    role="region"
                    aria-labelledby="Summary-{{ block.id }}-{{ section.id }}"
                  >
                    {{ block.settings.row_content }}
                    {{ block.settings.page.content }}
                  </div>
                </details>
              </div>
            {%- endfor -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


body{
    font-size:1.6rem;
    line-height:2.4rem;
     font-family: "Barlow", sans-serif;
     font-style: normal;
font-weight: 400;
    
}

h1, h2, h3, h4, h5, .h0, .h1, .h2, .h3, .h4, .h5{    font-family: "Barlow Condensed", sans-serif;  font-weight:800; } 

        .fs-75{

            font-size: 7.5rem;
            line-height: 5.9rem;
            letter-spacing: 0.907px;
        }

         .fs-78{
            
            font-size: 7.8rem;
            line-height: 5.9rem;
            letter-spacing: 0.907px;
        }

        h1, .h1 {
            font-size: 7.2rem;
            line-height: 7.2rem; 
        }

        h2, .h2 {
            font-size: 6.4rem;
            line-height: 6.4rem;
        }
        h3, .h3 {
            font-size: 4.6rem;
            line-height: 4.6rem;
        }
        h4, .h4 {
            font-size: 4.6rem;
            line-height: 4.0rem;
        }
        h5, .h5 {
            font-size: 3.2rem;
            line-height: 3.2rem;
        }
        .h0 {
            font-size: 7.7rem;
            line-height: 6.1rem;
           
        }

          /* Font Weight Classes */
        .fw-100 { font-weight: 100; }
        .fw-200 { font-weight: 200; }
        .fw-300 { font-weight: 300; }
        .fw-400 { font-weight: 400; }
        .fw-500 { font-weight: 500; }
        .fw-600 { font-weight: 600; }
        .fw-700 { font-weight: 700; }
        .fw-800 { font-weight: 800; }
        .fw-900 { font-weight: 900; }

       
.btn-wrappper{
    display:flex;
    gap:24px;
}

.button, .btn{    min-width: 192px;
    min-height: 48px;

text-align: center;
 font-family: "Barlow Semi Condensed", sans-serif;
font-size: 1.6rem;
font-style: normal;
font-weight: 800;
line-height: 2.4rem; 
text-transform: uppercase;

}


.color-scheme-2 {
          
        --color-secondary-button-border: #BEFA23;
        --color-secondary-button-text: #BEFA23;
       
      }

      .button.button--secondary, .button--secondary {
    border: solid 2px var(--color-secondary-button-border);
    color: var(--color-secondary-button-text);
}






        .text-big, .text-big p{ font-family: "Barlow", sans-serif;
font-size: 2.4rem;
font-style: normal;
font-weight: 500;
line-height: 3.2rem;}

        .link, .customer a{
            font-size:1.6rem; font-weight:700!important;
          

        }

        .img-fluid {
  max-width: 100%;
  height: auto;
}

.img-full, .w-100 {
  max-width: 100%!important;
  width: 100%!important;
  height: auto;
}

.cover{
       height: 100%;
    object-fit: cover;
}

        .for-mob{display: none!important; }

        .for-desk{}

        @media(max-width:749px){

              .for-mob{display: block!important; }

        .for-desk{ display:none!important}

        }

         .mb-16{
            margin-bottom:16px!important;
        }

          .mt-0{
            margin-top:0px!important;
        }

          .mb-24{
            margin-bottom:24px!important;
        }
     

        .mb-13{
            margin-bottom:13px!important;
        }
     

        .super-accent{
               color: var(--super-accent);
        }

       .mt-4 {
    margin-top: 4px!important;
}


@media(max-width:749px){

      .fs-75, .fs-78, h1, .h1  {

            font-size: 5.1rem;
          
            line-height: 5.1rem; 
        }

        .text-big, .text-big p{
            font-size:16px;
            font-weight:500px;
            line-height:24px;
        }


}


@media(max-width:456px){

    .btn-wrappper{
        flex-direction:column;
        width:100%;
    }

    .btn-wrappper .button{ width:100%; }
}
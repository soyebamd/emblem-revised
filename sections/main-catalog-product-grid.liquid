{{ 'template-collection.css' | asset_url | stylesheet_tag }}
{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}


{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }}">

{% comment %} product loop  {% endcomment %}


      {%- for product in collection.products -%}


            <div class="grid">
                
            <div class="grid__item ">


            <div class="product-details">

            <h3> {{ product.title | escape }}</h3>

            <div class="retail-price">
               
            {% render 'price', product: card_product, price_class: 'text-center', show_compare_at_price: true %}

            </div>

            <div class="product-desc">
                  {{ product.description }}
            </div>

            <div class="variants">
                    {%- for variant in product.variants -%}
  {%- if variant.inventory_management == 'shopify' -%}
  
    <span class="svg-wrapper" style="color: rgb(238, 148, 65)">
      {{ 'icon-inventory-status.svg' | inline_asset_content }}
    </span>
    
    {%- if variant.inventory_quantity <= 5 -%}
      <span class="inventory-status">
        {{ 'products.product.inventory_low_stock_show_count' | t: quantity: variant.inventory_quantity }}
      </span>
    {%- else -%}
      <span class="inventory-status">
        {{ 'products.product.inventory_in_stock_show_count' | t: quantity: variant.inventory_quantity }}
      </span>
    {%- endif -%}
    
  {%- else -%}
    <span class="svg-wrapper" style="color: rgb(62, 214, 96)">
      {{ 'icon-inventory-status.svg' | inline_asset_content }}
    </span>
    <span class="inventory-status">
      {{ 'products.product.inventory_in_stock' | t }}
    </span>
  {%- endif -%}
{%- endfor -%}
  
            </div>

            </div>


            </div>


                      <div class="grid__item "></div>
            </div>


        {% endfor %}
        {% comment %} product title  {% endcomment %}

</div>

{% schema %}
{
  "name": "Collection Catalog",
  "class": "section",
  "settings": [
    
  
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "info": "t:sections.all.colors.has_cards_info",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.main-collection-product-grid.settings.header__3.content"
    },
   
  
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
